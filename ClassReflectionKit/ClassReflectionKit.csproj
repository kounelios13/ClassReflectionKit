<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageDescription>ClassReflectionKit is a library that provides a set of utilities for working with class reflection in C#.</PackageDescription>
    <IncludeSymbols>True</IncludeSymbols>
    <PackageId>ClassReflectionKit</PackageId>
    <Version>1.0.4</Version>
    <RepositoryUrl>https://github.com/kounelios13/ClassReflectionKit</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.13.0" />
    <PackageReference Include="Microsoft.JavaScript.NodeApi" Version="0.9.11" />
    <PackageReference Include="Microsoft.JavaScript.NodeApi.Generator" Version="0.9.11" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
